platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'
install! 'cocoapods', deterministic_uuids: false

# ← caminho correto para o helper que o Flutter injeta em ios/Flutter/
load File.join(__dir__, 'Flutter', 'podhelper.rb')

flutter_ios_podfile_setup   # configura variáveis de build do Flutter

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  flutter_install_ios_plugin_pods   # instala todos os plugins iOS
end
