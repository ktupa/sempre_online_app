# ios/Podfile

platform :ios, '13.0'

# CocoaPods analytics disable
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# âœ… ESTE BLOCO DEVE FICAR FORA DO TARGET
install! 'cocoapods',
  :deterministic_uuids => false

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_installation
  flutter_root = File.expand_path(File.join(__dir__, '..', 'flutter'))
  load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
end

target 'Runner' do
  flutter_installation
end
